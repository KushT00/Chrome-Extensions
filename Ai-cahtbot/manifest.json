{
  "manifest_version": 3,
  "name": "Pixy Chat",
  "version": "1.0",
  "description": "Chat with Gemini AI using Google Generative AI SDK",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Chat",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "bundled-background.js"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://gemini.google.com/"],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_security_policy": {
    "script-src": "'self'",
    "object-src": "'self'"
  }
}
